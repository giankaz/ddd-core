{
  "private": true,
  "scripts": {
    "build": "turbo run build; pnpm format; pnpm i",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\" --loglevel silent",
    "core:cti": "turbo run core#cti",
    "core:build": "turbo run core#build",
    "clear:turbo": "find . -type d -name '.turbo' -print0 | xargs -0 rm -rf"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@7.15.0",
  "name": "ddd-core"
}
