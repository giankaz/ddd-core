{
  "private": true,
  "scripts": {
    "build": "turbo run build; pnpm format; pnpm i",
    "dev": "turbo run dev",
    "lint": "turbo run lint -- --max-warnings=0",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\" --loglevel silent",
    "core:cti": "turbo run core#cti",
    "core:build": "turbo run core#build",
    "core:format": "turbo run core#format",
    "core:test": "turbo run core#test",
    "clear:turbo": "find . -type d -name '.turbo' -print0 | xargs -0 rm -rf",
    "prepare": "husky install",
    "gen:entity": "node ./scripts/gen-entity.js"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "*"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@types/jest": "^29.5.1",
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.3",
    "listr": "^0.14.3",
    "prettier": "^2.5.1",
    "prompts": "^2.4.2",
    "turbo": "latest"
  },
  "packageManager": "pnpm@7.15.0",
  "name": "ddd-core"
}
