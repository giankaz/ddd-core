{
  "private": true,
  "scripts": {
    "build": "pnpm i; turbo run build; pnpm format",
    "dev": "turbo run dev",
    "lint": "turbo run lint -- --max-warnings=0",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\" --loglevel silent",
    "core:cti": "turbo run core#cti",
    "core:build": "turbo run core#build",
    "core:format": "turbo run core#format",
    "core:test": "turbo run core#test",
    "clear:turbo": "find . -type d -name '.turbo' -print0 | xargs -0 rm -rf",
    "prepare": "husky install",
    "ecli:build": "pnpm --filter=entity-cli build; pnpm add -D ./packages/entity-cli -w",
    "g:e": "pnpm ecli gen -p ./src/core/src",
    "g:e:json": "pnpm ecli gen -p ./src/core/src --json "
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "*"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@types/jest": "^29.5.1",
    "e-cli": "link:packages/eCLI",
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.3",
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@7.15.0",
  "name": "ddd-core"
}
