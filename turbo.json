{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": false
    },
    "test": {},
    "format": {},
    "lint": {},
    "clear:turbo": {},
    "dev": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "translation#build": {},
    "nestjs#build": {
      "dependsOn": ["core#build"]
    },
    "core#cti": {},
    "core#build": {
      "dependsOn": ["translation#build"]
    },
    "core#format": {},
    "core#test": {}
  }
}
